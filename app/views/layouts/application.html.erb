<!DOCTYPE html>
<html>
  <head>
    <title>Pivot Pong <%= location %> - <%= yield :title %></title>
    <%= stylesheet_link_tag :application %>
    <%= javascript_include_tag :application %>
    <%= javascript_include_tag "http://use.typekit.com/rol0dzy.js" %>
    <%= javascript_tag "try{Typekit.load();}catch(e){}" %>
    <%= favicon_link_tag %>
    <%= csrf_meta_tag %>
  </head>

  <body>
    <div id="page">
      <header>
        <h1>pivot pong <%= location.downcase %></h1>
        <nav>
          <%= link_to_with_current 'Top Ten', root_path %>
          <%= link_to_with_current 'Rankings', rankings_matches_path %>
          <%= link_to_with_current 'Matches', matches_path %>
          <%= link_to_with_current 'Doubles', doubles_matches_path %>
          <%= link_to_with_current 'Rankings', rankings_doubles_matches_path %>
        </nav>
      </header>

      <%= render 'shared/flash_messages' %>
      <%= yield %>

      <footer>
        <%= link_to 'source code', 'http://github.com/dipolesource/pivot-pong' %>
      </footer>
    </div>
  </body>
</html>
