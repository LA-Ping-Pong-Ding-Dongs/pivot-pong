<h2>Match history</h2>

<table id="history">
  <thead>
    <tr>
      <th class='date'>Date</th>
      <th class=''>Winner</th>
      <th class=''>Loser</th>
      <th class='action'></th>
    </tr>
  </thead>
  <tbody>
    <% match_history.each do |m| %>
      <tr class='<%= cycle 'even', 'odd' %>'>
        <td class='date'><%= m.occured_at.strftime("%Y-%m-%d") %></td>
        <td><%= m.winner %></td>
        <td><%= m.loser %></td>
        <td class='action'><%= link_to 'delete', match_path(m), method: :delete %></td>
      </tr>
    <% end -%>
  </tbody>
</table>
