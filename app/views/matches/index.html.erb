<%- content_for :title, 'Matches' %>

<%= form_for @match do |match| %>
  <%= label_tag :winner_name %>
  <%= text_field_tag :winner_name, '', autocomplete: 'off' %>
  <%= label_tag :loser_name %>
  <%= text_field_tag :loser_name, '', autocomplete: 'off' %>
  <%= match.label :occured_at %>
  <%= match.text_field :occured_at, value: Time.now.strftime("%Y-%m-%d %H:%M:%S"), disabled: :disabled %>
  <%= submit_tag 'Add match' %>
<% end -%>

<%= render partial: 'shared/match_history', object: @matches %>
